<% include partials/header.ejs %>

<div class="ui main text container segment">
     <div class="ui huge header"><h1><%= blog.title%></h1></div>
     <div class="ui top attached segment">
           <div class="item">
               <img class="ui centered rounded image" src="<%= blog.image %>">
               <div class="content">
                    <span><%=blog.created.toDateStrig%></span>
               </div>
          </div>
          <div class="description">
               <p><%- blog.body%></p>
          </div>
          <div >
               <a class="ui big basic button red" href="/blogs/<%=blog._id%>/edit">Edit</a> 

               <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                    <button class="ui big basic button red">Delete</button>
               </form>   
          </div>
          
          
     </div>
</div>



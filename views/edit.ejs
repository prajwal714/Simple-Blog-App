<% include partials/header %>

<div class="ui main text container segment">
     <div class="ui huge header">Edit Blog: <%=blog.title%></div>
     <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
          
          <div class="field">
               <label>Title</label>
               <input type="text" value="<%=blog.title%>" name="blogs[title]">
          </div>
          
          <div class="field">
               <label>Image Source </label>
               <input type="text" value="<%=blog.image%>" name="blogs[image]">
          </div>
          <div class="field">
               <label>Blog Content</label>
               <textarea name="blogs[body]"><%=blog.body%></textarea>
          </div>
          
          <input class="ui big basic button violet"type="submit">
          
     </form>
</div>

<% include partials/footer %>